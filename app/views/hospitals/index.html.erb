<div class="row">
  <% @hospitals.each do |hospital| %>
    <div class="col-sm-6 col-lg-4 pb-3 d-flex justify-content-center text-center">
      <div class="card" style="width: 18rem;">
        <%= fa_icon "h-square 5x" %>
        <div class="card-body">
          <h5 class="card-title"><%= hospital.name %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>